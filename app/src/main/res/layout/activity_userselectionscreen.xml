<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="20dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/applogo"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/primary_text"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="@string/USER_SELECTION"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/userType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/panchayath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Panchayath"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:checked="true"
                android:buttonTint="@color/colorAccent"

                />
            <RadioButton
                android:id="@+id/rozgar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ROZGAR_SEWAK"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:buttonTint="@color/colorAccent"

                />
            <RadioButton
                android:id="@+id/labourer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LABOURER"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:buttonTint="@color/colorAccent"

                />

        </RadioGroup>

        <Button
            style="@style/ButtonStyle"
            android:layout_marginTop="10dp"
            android:onClick="selectUser"
            android:text="@string/NEXT"
            />
        <!--<Button-->
        <!--android:id="@+id/button"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/button_selector"-->
        <!--android:onClick="selectUser"-->
        <!--android:text="@string/NEXT"-->
        <!--android:textSize="22sp"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_margin="30dp"-->

        <!--/>-->
    </LinearLayout>
</ScrollView>